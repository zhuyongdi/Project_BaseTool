<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fixed_bottom_navigation_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/xx_fixed_height"
    android:background="?selectableItemBackgroundBorderless"
    android:paddingBottom="@dimen/xx_fixed_height_bottom_padding"
    android:paddingLeft="@dimen/xx_fixed_width_padding"
    android:paddingRight="@dimen/xx_fixed_width_padding"
    android:paddingTop="@dimen/xx_fixed_height_top_padding_inactive">

    <FrameLayout
        android:id="@+id/fixed_bottom_navigation_icon_container"
        android:layout_width="@dimen/xx_fixed_icon_badge_grid_width"
        android:layout_height="@dimen/xx_fixed_icon_badge_grid_height"
        android:layout_gravity="center_horizontal|top">

        <ImageView
            android:id="@+id/fixed_bottom_navigation_icon"
            android:layout_width="@dimen/xx_fixed_icon_grid"
            android:layout_height="@dimen/xx_fixed_icon_grid"
            android:layout_gravity="center"
            android:contentDescription="@string/xx_icon"
            android:gravity="center"
            android:scaleType="fitXY" />

        <com.zhuyongdi.basetool.widget.navigation.bottom_navigation.badge_item.XXBadgeTextView
            android:id="@+id/fixed_bottom_navigation_badge"
            style="@style/XXBadgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:gravity="center" />
    </FrameLayout>

    <TextView
        android:id="@+id/fixed_bottom_navigation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="1"
        android:scaleX="0.857"
        android:scaleY="0.857"
        android:textSize="@dimen/xx_fixed_label_active" />

</FrameLayout>