    <!-- BottomNavigation -->
    <style name="XXBadgeText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/xx_badge_text_size</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/xx_badge_top_margin</item>
        <item name="android:paddingRight">@dimen/xx_badge_width_padding</item>
        <item name="android:paddingLeft">@dimen/xx_badge_width_padding</item>
        <item name="android:paddingBottom">@dimen/xx_badge_height_padding</item>
        <item name="android:paddingTop">@dimen/xx_badge_height_padding</item>
        <item name="android:visibility">gone</item>
    </style>

    <declare-styleable name="XXBottomNavigationBar">
        <attr name="xx_bottom_navigation_bard_bnb_elevation" format="dimension" />
        <attr name="xx_bottom_navigation_bard_bnb_active_color" format="color" />
        <attr name="xx_bottom_navigation_bard_bnb_inactive_color" format="color" />
        <attr name="xx_bottom_navigation_bard_bnb_background_color" format="color" />
        <attr name="xx_bottom_navigation_bard_bnb_animation_duration" format="integer" />
        <attr name="xx_bottom_navigation_bard_bnb_mode" format="enum">
            <enum name="xx_bottom_navigation_bard_mode_default" value="0" />
            <enum name="xx_bottom_navigation_bard_mode_fixed" value="1" />
            <enum name="xx_bottom_navigation_bard_mode_shifting" value="2" />
            <enum name="xx_bottom_navigation_bard_mode_fixed_no_title" value="3" />
            <enum name="xx_bottom_navigation_bard_mode_shifting_no_title" value="4" />
        </attr>
        <attr name="xx_bottom_navigation_bard_bnb_background_style" format="enum">
            <enum name="xx_bottom_navigation_bard_background_style_default" value="0" />
            <enum name="xx_bottom_navigation_bard_background_style_static" value="1" />
            <enum name="xx_bottom_navigation_bard_background_style_ripple" value="2" />
        </attr>
        <attr name="xx_bottom_navigation_bard_bnb_auto_hide_enabled" format="boolean" />
    </declare-styleable>

    <!-- 微信九宫格控件 -->
    <declare-styleable name="XXNineGridView">
        <attr name="xx_nine_grid_view_max_size" format="integer" />
        <attr name="xx_nine_grid_view_spacing" format="dimension" />
        <attr name="xx_nine_grid_view_single_min_width" format="float" />
        <attr name="xx_nine_grid_view_single_max_width" format="float" />
    </declare-styleable>

    <!-- 阴影圆角Layout -->
    <declare-styleable name="XXRSLayout">
        <attr name="xx_rs_radius_left_top" format="dimension" />
        <attr name="xx_rs_radius_left_bottom" format="dimension" />
        <attr name="xx_rs_radius_right_top" format="dimension" />
        <attr name="xx_rs_radius_right_bottom" format="dimension" />
        <attr name="xx_rs_radius" format="dimension" />
        <attr name="xx_rs_stroke_width" format="dimension" />
        <attr name="xx_rs_stroke_color" format="color" />
        <attr name="xx_rs_shadow_width" format="dimension" />
        <attr name="xx_rs_shadow_offset_x" format="dimension" />
        <attr name="xx_rs_shadow_offset_y" format="dimension" />
        <attr name="xx_rs_shadow_color" format="color" />
    </declare-styleable>

    <!-- 圆形ImageView -->
    <declare-styleable name="XXCircleImageView">
        <attr name="xx_circle_image_view_border_width" format="dimension" />
        <attr name="xx_circle_image_view_border_color" format="color" />
        <attr name="xx_circle_image_view_border_overlay" format="boolean" />
        <attr name="xx_circle_image_view_circle_background_color" format="color" />
    </declare-styleable>

    <!-- 圆角ImageView -->
    <declare-styleable name="XXRoundImageView">
        <attr name="xx_round_image_view_corner_radius" format="dimension" />
        <attr name="xx_round_image_view_corner_radius_top_left" format="dimension" />
        <attr name="xx_round_image_view_corner_radius_top_right" format="dimension" />
        <attr name="xx_round_image_view_corner_radius_bottom_left" format="dimension" />
        <attr name="xx_round_image_view_corner_radius_bottom_right" format="dimension" />
        <attr name="xx_round_image_view_icon_src_normal" format="reference" />
        <attr name="xx_round_image_view_icon_src_pressed" format="reference" />
        <attr name="xx_round_image_view_icon_src_unable" format="reference" />
        <attr name="xx_round_image_view_border_width" format="dimension" />
        <attr name="xx_round_image_view_border_color" format="color" />
        <attr name="xx_round_image_view_is_circle" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <!-- 指示器 -->
    <declare-styleable name="XXCommonIndicator">
        <attr name="xx_common_indicator_select_width" format="dimension" />
        <attr name="xx_common_indicator_unselect_width" format="dimension" />
        <attr name="xx_common_indicator_select_color" format="color" />
        <attr name="xx_common_indicator_unselect_color" format="color" />
        <attr name="xx_common_indicator_padding" format="dimension" />
        <attr name="xx_common_indicator_size" format="integer" />
    </declare-styleable>

    <!-- 轮播图 -->
    <declare-styleable name="XXSimpleBanner">
        <attr name="xx_simple_banner_is_auto_slide" format="boolean" />
        <attr name="xx_simple_banner_auto_slide_interval" format="integer" />
        <attr name="xx_simple_banner_auto_slide_duration" format="integer" />
    </declare-styleable>

    <!-- CardView -->
    <style name="Base.XXCardView" parent="android:Widget">
        <item name="xx_card_view_card_corner_radius">@dimen/xx_card_view_default_radius</item>
        <item name="xx_card_view_card_elevation">@dimen/xx_card_view_default_elevation</item>
        <item name="xx_card_view_card_max_elevation">@dimen/xx_card_view_default_elevation</item>
        <item name="xx_card_view_card_use_compat_padding">false</item>
        <item name="xx_card_view_card_prevent_corner_overlap">true</item>
    </style>

    <style name="XXCardView" parent="Base.XXCardView" />

    <attr name="XXCardViewStyle" format="reference" />
    <declare-styleable name="XXCardView">
        <attr name="xx_card_view_card_background_color" format="color" />
        <attr name="xx_card_view_card_corner_radius" format="dimension" />
        <attr name="xx_card_view_card_elevation" format="dimension" />
        <attr name="xx_card_view_card_max_elevation" format="dimension" />
        <attr name="xx_card_view_card_use_compat_padding" format="boolean" />
        <attr name="xx_card_view_card_prevent_corner_overlap" format="boolean" />
        <attr name="xx_card_view_content_padding" format="dimension" />
        <attr name="xx_card_view_content_padding_left" format="dimension" />
        <attr name="xx_card_view_content_padding_right" format="dimension" />
        <attr name="xx_card_view_content_padding_top" format="dimension" />
        <attr name="xx_card_view_content_padding_bottom" format="dimension" />
        <attr name="android:minWidth" />
        <attr name="android:minHeight" />
    </declare-styleable>

    <declare-styleable name="XXBubbleView">
        <attr name="xx_bubble_orientation" format="enum">
            <enum name="LEFT" value="0" />
            <enum name="TOP" value="1" />
            <enum name="RIGHT" value="2" />
            <enum name="BOTTOM" value="3" />
        </attr>
        <attr name="xx_bubble_background_color" format="color" />
        <attr name="xx_bubble_stroke_width" format="dimension" />
        <attr name="xx_bubble_stroke_color" format="color" />
        <attr name="xx_bubble_radius" format="dimension" />
        <attr name="xx_bubble_tri_position_pct" format="integer" />
        <attr name="xx_bubble_tri_position_val" format="dimension" />
        <attr name="xx_bubble_tri_width" format="dimension" />
        <attr name="xx_bubble_tri_height" format="dimension" />
    </declare-styleable>

</resources>