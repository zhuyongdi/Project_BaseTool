<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- PermissionActivity主题 -->
    <style name="XXPermissionActivityTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- activity进出场动画_平移_300 -->
    <style name="xx_activity_animation_translate_300" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">
            @anim/xx_activity_animation_translate_open_enter_300
        </item>
        <item name="android:activityOpenExitAnimation">
            @anim/xx_activity_animation_translate_open_exit_300
        </item>
        <item name="android:activityCloseEnterAnimation">
            @anim/xx_activity_animation_translate_close_enter_300
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/xx_activity_animation_translate_close_exit_300
        </item>
    </style>

    <!-- activity进出场动画_平移_300 -->
    <style name="xx_activity_animation_translate_250" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">
            @anim/xx_activity_animation_translate_open_enter_250
        </item>
        <item name="android:activityOpenExitAnimation">
            @anim/xx_activity_animation_translate_open_exit_250
        </item>
        <item name="android:activityCloseEnterAnimation">
            @anim/xx_activity_animation_translate_close_enter_250
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/xx_activity_animation_translate_close_exit_250
        </item>
    </style>

    <!-- activity进出场动画_平移_300 -->
    <style name="xx_activity_animation_fade_300" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">
            @anim/xx_activity_animation_fade_open_enter_close_enter
        </item>
        <item name="android:activityOpenExitAnimation">
            @anim/xx_activity_animation_fade_open_exit_close_exit
        </item>
        <item name="android:activityCloseEnterAnimation">
            @anim/xx_activity_animation_fade_open_enter_close_enter
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/xx_activity_animation_fade_open_exit_close_exit
        </item>
    </style>

    <!-- Dialog主题,基类-->
    <style name="XXBaseDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- Dialog主题,背景变暗 -->
    <style name="XXDialogStyleBgDark" parent="XXBaseDialogStyle">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Dialog主题,背景不变暗 -->
    <style name="XXDialogStyleBgNotDark" parent="XXBaseDialogStyle">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Dialog动画,从底部平移出来,时长200 -->
    <style name="XXDialogAnimation_translate_from_bottom_200" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">
            @anim/xx_dialog_animation_translate_from_bottom_in_200
        </item>
        <item name="android:windowExitAnimation">
            @anim/xx_dialog_animation_translate_from_bottom_out_200
        </item>
    </style>

    <!-- Dialog动画,从底部平移出来,时长180 -->
    <style name="XXDialogAnimation_translate_from_bottom_180" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">
            @anim/xx_dialog_animation_translate_from_bottom_in_180
        </item>
        <item name="android:windowExitAnimation">
            @anim/xx_dialog_animation_translate_from_bottom_out_180
        </item>
    </style>

    <!-- Dialog动画,从右往左伸缩出来,时长200 -->
    <style name="XXDialogAnimation_scale_from_right_to_left_200" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">
            @anim/xx_dialog_animation_scale_from_right_to_left_in_200
        </item>
        <item name="android:windowExitAnimation">
            @anim/xx_dialog_animation_scale_from_right_to_left_out_200
        </item>
    </style>

    <!-- Dialog动画,从右往左伸缩出来,时长180 -->
    <style name="XXDialogAnimation_scale_from_right_to_left_180" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">
            @anim/xx_dialog_animation_scale_from_right_to_left_in_180
        </item>
        <item name="android:windowExitAnimation">
            @anim/xx_dialog_animation_scale_from_right_to_left_out_180
        </item>
    </style>

